@model List<RoleIndexViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<a asp-controller="Role" asp-action="CreateRole">Create Role</a>

<div class="container">
    @if (Model.Any()) {
        @for (int i = 0; i < Model.Count; i++) {
            <div class="form-group">
                Name = @Model[i].RoleName
                <br />
                RoleId = @Model[i].RoleId
            </div>
        }
    } else {
        <p>No Role Found.</p>
    }
</div>